<div class="row">
  <div class="mt-5 mx-auto">
    <%= form_with model: group do |f| %>
      <%= render 'layouts/errors', obj: group %>
      <form class="form-horizontal">
        <div class="form-group row mx-auto">
          <label class="col-lg-4 mt-1", for="group_image">グループ画像</label>
          <div class="col-lg-8">
            <%= f.file_field :group_image, accept: "image/*", class: 'form-control-file' %>
          </div>
        </div>
        <div class="form-group row mx-auto">
          <label class="col-lg-4 mt-2", for="name">グループ名</label>
          <div class="col-lg-8">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row mx-auto">
          <label class="col-lg-4 mt-2", for="introduction">グループ紹介</label>
          <div class="col-lg-8">
            <%= f.text_area :introduction, class: 'form-control'%>
          </div>
        </div>
        <div class="form-group col-2 offset-5">
          <% if group.new_record? %>
            <%= f.submit "作成", class: 'btn btn-sm btn-outline-secondary' %>
          <% else %>
            <%= f.submit "更新", class: 'btn btn-sm btn-outline-secondary' %>
          <% end %>
        </div>
      </form>
    <% end %>
  </div>
</div>
