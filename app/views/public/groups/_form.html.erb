<%= form_with model: group do |f| %>
  <div class="form-group">
    <label for="group_image">グループ画像</label>
    <%= f.file_field :group_image, accept: "image/*", class: 'form-control-file' %>
  </div>
  <div class="form-group">
    <label for="name">グループ名</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="introduction">グループ紹介</label>
    <%= f.text_area :introduction, class: 'form-control'%>
  </div>
  <div class="form-group">
    <% if group.new_record? %>
      <%= f.submit "作成", class: 'btn btn-sm btn-success' %>
    <% else %>
      <%= f.submit "更新", class: 'btn btn-sm btn-success' %>
    <% end %>
  </div>
<% end %>