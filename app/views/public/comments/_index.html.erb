<div class="comment-index">
  <% if comments.any? %>
    <h4 class="mt-1 ml-1">コメント</h4>

    <% comments.each do |comment| %>
      <div class="comment">
        <div class="profile pt-1 pl-1">
          <%= link_to user_path(comment.user), class: 'text-dark' do %>
            <%= image_tag comment.user.get_profile_image, class: 'rounded-circle', size: '50x50' %>
            <%= comment.user.name %>
          <% end %>

          <% if comment.user == current_user %>
            <div class="float-right mt-3 mr-4">
              <%= link_to "削除", post_comment_path(comment.post, comment), class: 'btn btn-sm btn-outline-danger', method: :delete,
                "data-confirm" => "本当に削除しますか？", remote: true %>
            </div>
          <% end %>
        </div>

        <div class="comment-content">
          <%= simple_format(comment.comment) %>
        </div>
      </div>
    <% end %>

  <% else %>
    <p>コメントはありません</p>
  <% end %>
</div>
