<%= form_with model: [post, comment], local: false do |f| %>
  <div class="comment-form">
    <div class="form-area">
      <%= f.text_area :comment, class: 'form-control' %>
    </div>
    <div class="form-btn mt-4">
      <%= f.submit 'コメントする', class: 'btn btn-info btn-sm' %>
    </div>
  </div>
<% end %>
