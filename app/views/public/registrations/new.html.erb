<h2>Sign up</h2>

<div class="row">
  <div class="mt-5 mx-auto">
    <%= form_with model: @user,url: user_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <form class="form-horizontal">
        <div class="field row mx-auto">
          <label class="col-lg-5 mt-2", for="name">ユーザー名</label>
          <div class="col-lg-7">
            <%= f.text_field :name %>
          </div>
        </div>

        <div class="field row mx-auto">
          <label class="col-lg-5 mt-2", for="email">メールアドレス</label>
          <div class="col-lg-7">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="field row mx-auto">
          <label class="col-lg-5 mt-2", for="password">パスワード<br>
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)
            <% end %>
          </label>
          <div class="col-lg-7 mt-lg-4">
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>

        <div class="field row mx-auto">
          <label class="col-lg-5 mt-2", for="password_confirmation">パスワード<br>(確認)</label>
          <div class="col-lg-7 mt-lg-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="actions col-2 offset-5 mt-4 pt-5 justify-content-center">
          <%= f.submit "Sign up" %>
        </div>
        <div class="col-4 offset-5 justify-content-center">
          <%= render "public/shared/links" %>
        </div>
      </form>
    <% end %>
  </div>
</div>
