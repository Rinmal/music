<h1>プロフィール編集</h1>
<div class="row">
  <div class=" mt-5 mx-auto ">
    <%= form_with model: @user do |f| %>
      <%= render 'layouts/errors', obj: @user %>
      <form class="form-horizontal">
        <div class="form-group row mx-auto">
          <label class="col-lg-4 mt-1", for="profile_image">プロフィール画像</label>
          <div class="col-lg-8">
            <%= f.file_field :profile_image, class: 'form-control-file', accept: 'image/*' %>
          </div>
        </div>
        <div class="form-group row mx-auto">
          <label class="col-lg-4 mt-2", for="name">ユーザー名</label>
          <div class="col-lg-8">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row mx-auto">
          <label class="col-lg-4 mt-2", for="introduction">自己紹介文</label>
          <div class="col-lg-8">
            <%= f.text_area :introduction, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-2 offset-5 mt-5 pt-5 justify-content-center">
            <%= f.submit "更新", class: 'btn btn-outline-secondary' %>
          </div>
        </div>
      </form>
    <% end %>
  </div>
</div>
