<h2>Log in</h2>

<div class="row">
  <div class="mt-5 mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <form class="form-horizontal">
        <div class="field row mx-auto">
          <label class="col-lg-5 mt-2", for="email">メールアドレス</label>
          <div class="col-lg-7">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="field row mx-auto">
          <label class="col-lg-5 mt-lg-4", for="password">パスワード</label>
          <div class="col-lg-7 mt-lg-3">
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-3 ml-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions col-2 offset-5 mt-4 pt-5 justify-content-center">
          <%= f.submit "Log in" %>
        </div>
      </form>
    <% end %>
  </div>
</div>
