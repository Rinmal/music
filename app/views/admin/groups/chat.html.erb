<h2><%= @group.name %></h2>

<div class="chat mt-5 mx-3">
  <div class="message-index">
    <% @messages.each do |message| %>
      <div class="other-messages py-2">
        <div class="chat-face">
          <%= image_tag message.user.get_profile_image, class: 'rounded-circle', size: '40x40' %>
          <%= message.user.name %>
        </div>

        <div class="chat-fukidashi">
          <strong><%= message.message %></strong><br>
          <%= message.created_at.strftime("%m-%d %H:%M") %>
          <%= link_to admin_message_path(message), method: :delete do %>
            <i class="fa-solid fa-xmark text-danger"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

