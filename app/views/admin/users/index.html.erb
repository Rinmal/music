<h1>ユーザー一覧</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>ユーザー名</th>
      <th>状態</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td>
          <%= link_to admin_user_path(user) do %>
            <%= user.name %>
          <% end %>
        </td>
        <td>
          <% if user.is_deleted == false %>
            <b class="text-success">有効</b>
          <% else %>
            <b class="text-black-50">退会</b>
          <% end %>
        </td>
        <td>
          <% if (user.is_deleted == false) && (user.is_frozen == true) %>
            <b class="text-primary">凍結中</b>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
