<h2>フォロー</h2>

<div class="row mt-5">
  <table class="table col-8 offset-2">
    <thead>
      <tr>
        <th></th>
        <th>ユーザー名</th>
        <th>状態</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, class: 'rounded-circle', size: '50x50' %></td>
          <td>
            <%= link_to admin_user_path(user), class: 'text-dark' do %>
              <%= user.name %>
            <% end %>
          </td>
          <td>
            <% if user.is_deleted == false %>
              <b class="text-success">有効</b>
            <% else %>
              <b class="text-black-50">退会</b>
            <% end %>
          </td>
          <td>
            <% if (user.is_deleted == false) && (user.is_frozen == true) %>
              <b class="text-primary">凍結中</b>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
