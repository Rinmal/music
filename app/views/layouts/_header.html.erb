<header class="header col-lg-2 order-lg-1 bg-white">
  <div class="header-item">
    <nav class="navbar navbar-dark flex-lg-column">
      <div class="title">
        <a clss="navbar-braand" href="/">
          <%= image_tag asset_path('IMG_4364.png'), class: 'logo', alt: "" %>
          <span class="text-dark">音の広場</span>
        </a>
      </div>
      <ul class="navbar-nav flex-row flex-lg-column">
        <% if user_signed_in? %>
          <br>
          <li>
            <%= link_to posts_path, class: 'btn btn-lg' do %>
              <i class="fa-solid fa-house-chimney"></i>
              <span class="text">ホーム</span>
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user.id), class: 'btn btn-lg' do %>
              <i class="fa-solid fa-user"></i>
              <span class="text">マイページ</span>
            <% end %>
          </li>

          <% unless current_user.name == 'ゲストユーザー' %>
            <li>
              <%= link_to new_post_path, class: 'btn btn-lg' do %>
                <i class="fa-solid fa-pen-to-square"></i>
                <span class="text">投稿する</span>
              <% end %>
            </li>
          <% end %>

          <li>
            <%= link_to groups_path, class: 'btn btn-lg' do %>
              <i class="fa-solid fa-users"></i>
              <span class="text">グループ</span>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, class: 'btn btn-lg', method: :delete do %>
              <i class="fa-solid fa-right-from-bracket"></i>
              <span class="text">ログアウト</span>
            <% end %>
          </li>
          <% unless current_user.name == 'ゲストユーザー' %>
            <li>
              <%= link_to user_unsubscribe_path(current_user), class: 'btn btn-lg' do %>
                <i class="fa-solid fa-user-minus"></i>
                <span class="text">退会する</span>
              <% end %>
            </li>
          <% end %>

        <% elsif admin_signed_in? %>
          <br>
          <li>
            <%= link_to admin_users_path, class: 'btn btn-lg' do %>
            <i class="fa-solid fa-user"></i>
            <span class="text">ユーザー一覧</span>
            <% end %>
          </li>
          <li>
            <%= link_to admin_posts_path, class: 'btn btn-lg' do %>
              <i class="fa-regular fa-folder-closed"></i>
              <span class="text">投稿一覧</span>
            <% end %>
          </li>
          <li>
            <%= link_to admin_groups_path, class: 'btn btn-lg' do %>
              <i class="fa-solid fa-users"></i>
              <span class="text">グループ一覧</span>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, class: 'btn btn-lg', method: :delete do %>
              <i class="fa-solid fa-right-from-bracket"></i>
              <span class="text">ログアウト</span>
            <% end %>
          </li>

        <% else %>
        <li>
          <%= link_to "ゲストログイン", users_guest_sign_in_path, class: 'btn btn-lg', method: :post %>
        </li>
        <li>
          <%= link_to new_user_session_path, class: 'btn btn-lg' do %>
            <i class="fa-solid fa-right-to-bracket"></i>
            <span class="text">ログイン</span>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_registration_path, class: 'btn btn-lg' do %>
            <i class="fa-solid fa-user-plus"></i>
            <span class="text">新規登録</span>
          <% end %>
        </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
