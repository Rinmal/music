<header>
  <% if user_signed_in? %>
    <br>
    <li>
      <%= link_to "ホーム", posts_path %>
    </li>
    <li>
      <%= link_to "マイページ", user_path(current_user.id) %>
    </li>
    <li>
      <%= link_to "投稿する", new_post_path %>
    </li>
    <li>
      <%= link_to "グループ一覧", groups_path %>
    </li>
    <li>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    </li>
  <% elsif admin_signed_in? %>
    <br>
    <li>
      <%= link_to "ユーザー一覧", admin_users_path %>
    </li>
    <li>
      <%= link_to "投稿一覧", admin_posts_path %>
    </li>
    <li>
      <%= link_to "グループ一覧", admin_groups_path %>
    </li>
    <li>
      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
    </li>
  <% else %>
  <li>
    <%= link_to "ゲストログイン(閲覧用)", users_guest_sign_in_path, class: 'btn btn-lg', method: :post %>
  </li>
  <li>
    <%= link_to "ログイン",new_user_session_path, class: 'btn btn-lg' %>
  </li>
  <li>
    <%= link_to "新規登録",new_user_registration_path, class: 'btn btn-lg' %>
  </li>
  <% end %>
</header>